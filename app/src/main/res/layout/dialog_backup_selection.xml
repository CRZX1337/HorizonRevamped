<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_selection_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkbox_boot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="boot"
            android:checked="true" />

        <CheckBox
            android:id="@+id/checkbox_dtbo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dtbo" />

        <CheckBox
            android:id="@+id/checkbox_init_boot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="init_boot" />

        <CheckBox
            android:id="@+id/checkbox_system_dlkm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="system_dlkm" />

        <CheckBox
            android:id="@+id/checkbox_vbmeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vbmeta" />

        <CheckBox
            android:id="@+id/checkbox_vendor_boot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vendor_boot" />

        <CheckBox
            android:id="@+id/checkbox_vendor_dlkm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vendor_dlkm" />

        <CheckBox
            android:id="@+id/checkbox_vendor_kernel_boot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vendor_kernel_boot" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_storage_location"
            android:layout_marginTop="16dp"
            android:textStyle="italic"/>

    </LinearLayout>
</ScrollView> 